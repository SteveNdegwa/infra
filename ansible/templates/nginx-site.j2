{% for env in ['prod', 'stage'] %}
{% if app.environments[env].domain is defined %}
server {
    listen 80;
    server_name {{ app.environments[env].domain }};

    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name {{ app.environments[env].domain }};

    ssl_certificate /etc/letsencrypt/live/{{ app.environments[env].domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ app.environments[env].domain }}/privkey.pem;

    location / {
        proxy_pass http://localhost:{{ app.environments[env].port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
{% endif %}
{% endfor %}